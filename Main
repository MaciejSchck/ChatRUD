        rudyTekst.put(6,"A w ogóle");
        rudyTekst.put(7,"Ej słyszeliście");

        rudyTekst.put(8," byłem w manu co nie");
        rudyTekst.put(9," byłem w tym co nie");
        rudyTekst.put(10," byłem yyyy wiecie co nie");
        rudyTekst.put(11," spotkałem yyyy tego co nie");
        rudyTekst.put(12," wchodzi ojciec co nie");
        rudyTekst.put(13," wchodzę do pokoju co nie");
        rudyTekst.put(14," wchodzi brat co nie");
        rudyTekst.put(15," gadałem z Łucją co nie");
        rudyTekst.put(16," wracałem sobie");
        rudyTekst.put(17," karmiłem kury");
        rudyTekst.put(18," wpadłem na taki pomysł");
        rudyTekst.put(19," tak sobie pomyślałem");

        rudyTekst.put(20," i ja wtedy");
        rudyTekst.put(21," i ja miałem takie");
        rudyTekst.put(22,", jak to się mówi");
        rudyTekst.put(23,", kurde");
        rudyTekst.put(24,", w sumie");
        rudyTekst.put(25,", w sensie");
        rudyTekst.put(26,", tego");
        rudyTekst.put(27,", no bo wiesz");
        rudyTekst.put(28,", po prostu tego");

        rudyTekst.put(29," ...dobra nieważne.");
        rudyTekst.put(30,", no i tak o.");
        rudyTekst.put(31,", no.");
        rudyTekst.put(32,", ej mArcin");
        rudyTekst.put(33,", czekajcie bo ojciec...");
        rudyTekst.put(34,", czekajcie bo brat...");
