        rudyTekst.put(36,", czekajcie bo bąbel...");
        rudyTekst.put(37,", e jebać...");

        Random random = new Random();

        JPanel panel = new JPanel();
        JFrame chatRUD = new JFrame();
        JButton button = new JButton();

        panel.setLayout(null);
        JTextPane textPane = new JTextPane();
        textPane.setEditable(false);
        textPane.setVisible(true);

        JTextField textField = new JTextField();
        textField.setBounds(10,375,765,100);
        textField.setVisible(true);
        textField.setFont(new Font("Arial", Font.BOLD, 15));

        panel.add(textField);

        button.setBounds(250,100,300,200);
        button.setText("Generate a RUDY prompt");
        button.setFocusable(false);
        button.setFont(new Font("Arial", Font.BOLD, 20));

        chatRUD.setTitle("ChatRUD");
        chatRUD.setLayout(null);
        chatRUD.setVisible(true);
        chatRUD.setSize(800,600);
        chatRUD.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        chatRUD.getContentPane().setBackground(new java.awt.Color(127, 44, 9));
        chatRUD.add(button);
        chatRUD.add(panel);
        chatRUD.add(textPane);
        chatRUD.add(textField);

        File file = new File("C:\\Program Files\\dZawa\\ChatRUD\\chatrud.wav");
        AudioInputStream audioStream = AudioSystem.getAudioInputStream(file);
        Clip clip = AudioSystem.getClip();
        clip.open(audioStream);
        clip.start();
        clip.loop(clip.LOOP_CONTINUOUSLY);

        button.addActionListener(e -> textField.setText(rudyTekst.get(random.nextInt(7)+1)+rudyTekst.get(random.nextInt(8,19)+1)+rudyTekst.get(random.nextInt(20,28)+1)+rudyTekst.get(random.nextInt(8,19)+1)+rudyTekst.get(random.nextInt(29,37)+1)));
        }
    }
