import javax.sound.sampled.*;

public class Main {
    public static void main(String[] args) throws UnsupportedAudioFileException, IOException, LineUnavailableException {
        HashMap<Integer, String> rudyTekst = new HashMap<>();

        rudyTekst.put(1,"Ej");
        rudyTekst.put(2,"Ej bo");
        rudyTekst.put(3,"Słuchajcie chłopaki");
        rudyTekst.put(4,"Słuchajcie");
